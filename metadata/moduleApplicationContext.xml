<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">

<!-- Beans to add to the current Application context definition -->
  
<beans>	
    <bean id="phrUrlMapping" class="org.springframework.web.servlet.handler.SimpleUrlHandlerMapping">
		<property name="order" value="1"/>
    	<property name="mappings">
            <props>
			   <prop key="phr/*.htm">phrSpringController</prop>
			   <prop key="phr/patientDashboard.form">phrPatientDashboardForm</prop>
			   <prop key="phr/personDashboard.form">phrPersonDashboardForm</prop>
			   <prop key="phr/restrictedUserDashboard.form">phrRestrictedUserDashboardForm</prop>
			   <prop key="phr/patientRelationshipsForm.form">phrPatientRelationshipsForm</prop>
				<prop key="phr/newPatient.form">phrNewPatientForm</prop>
				<prop key="phr/options.form">phrOptionsForm</prop>
				<!--<prop key="phr/user.form">phrUserForm</prop>-->
			   <prop key="**/personalhr/portlets/newPatientForm.portlet">phrNewPatientForm</prop>
				<prop key="**/personalhr/portlets/phrNameLayout.portlet">phrNameLayoutPortletController</prop>
			   
			   <prop key="**/personalhr/portlets/personRelationships.portlet">phrPersonRelationshipsPortletController</prop>
			   <prop key="**/personalhr/portlets/restrictedUserRelationships.portlet">phrPersonRelationshipsPortletController</prop>
	    	   <prop key="**/personalhr/portlets/*.portlet">phrPortletController</prop>			   
				<prop key="phr/user.list">phrUserList</prop>
			</props>
		</property>
    </bean>
    
	<!-- Service -->
	<bean parent="serviceContext">
		<property name="moduleService">
			<list>
				<value>org.openmrs.module.personalhr.PhrSecurityService</value>
				<bean class="org.springframework.transaction.interceptor.TransactionProxyFactoryBean">
					<property name="transactionManager"><ref bean="transactionManager"/></property>
					<property name="target">
						<bean class="org.openmrs.module.personalhr.PhrSecurityServiceImpl">
							<property name="allowedUrlDao">
								<bean class="org.openmrs.module.personalhr.db.hibernate.HibernatePhrAllowedUrlDAO">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
								</bean>
							</property>	
							<property name="sharingTokenDao">
								<bean class="org.openmrs.module.personalhr.db.hibernate.HibernatePhrSharingTokenDAO">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
								</bean>
							</property>	
							<property name="securityRuleDao">
								<bean class="org.openmrs.module.personalhr.db.hibernate.HibernatePhrSecurityRuleDAO">
									<property name="sessionFactory"><ref bean="sessionFactory"/></property>	
								</bean>
							</property>	
						</bean>
					</property>
					<property name="preInterceptors">
						<ref bean="serviceInterceptors"/>  <!--  handles common metadata fields -->
					</property>
					<property name="transactionAttributeSource">
						<bean class="org.springframework.transaction.annotation.AnnotationTransactionAttributeSource"/>
					</property>
				</bean>
			</list>
		</property>
	</bean>
    
	
    <!-- Controllers -->
	
	<bean id="phrSpringController" class="org.openmrs.module.personalhr.web.controller.SpringController" />
	
    <!-- Form Controllers -->
	<bean id="phrPatientDashboardForm"
		class="org.openmrs.module.personalhr.web.controller.PatientDashboardController">
		<property name="sessionForm"><value>true</value></property>
		<property name="commandName"><value>patient</value></property>
		<property name="formView"><value>/module/personalhr/view/patientDashboardForm</value></property>
		<property name="successView"><value>patientDashboard.form</value></property>
	</bean>
	<bean id="phrPersonDashboardForm"
		class="org.openmrs.module.personalhr.web.controller.PersonDashboardController">
		<property name="sessionForm"><value>true</value></property>
		<property name="commandName"><value>person</value></property>
		<property name="formView"><value>/module/personalhr/view/personDashboardForm</value></property>
		<property name="successView"><value>personDashboard.form</value></property>
	</bean>
	<bean id="phrRestrictedUserDashboardForm"
		class="org.openmrs.module.personalhr.web.controller.PersonDashboardController">
		<property name="sessionForm"><value>true</value></property>
		<property name="commandName"><value>person</value></property>
		<property name="formView"><value>/module/personalhr/view/restrictedUserDashboardForm</value></property>
		<property name="successView"><value>personDashboard.form</value></property>
	</bean>
	<bean id="phrPatientRelationshipsForm"
		class="org.openmrs.module.personalhr.web.controller.PatientRelationshipsFormController">
		<property name="sessionForm"><value>true</value></property>
		<property name="commandName"><value>patient</value></property>
		<property name="formView"><value>/module/personalhr/view/patientRelationshipsForm</value></property>
		<property name="successView"><value>patientRelationshipsForm.form</value></property>
	</bean>
	<!-- ** New (mini) Patient ** -->
	<bean id="phrShortPatientValidator" class="org.openmrs.module.personalhr.web.controller.ShortPatientValidator" />
	<bean id="phrNewPatientForm" class="org.openmrs.module.personalhr.web.controller.NewPatientFormController">
		<property name="commandName"><value>patient</value></property>
		<property name="commandClass"><value>org.openmrs.module.personalhr.web.controller.ShortPatientModel</value></property>
		<property name="formView"><value>/module/personalhr/view/newPatientForm</value></property>
		<property name="successView"><value>patientDashboard.form</value></property>
		<property name="shortPatientValidator" ref="phrShortPatientValidator"/>
	</bean>
	<!-- ** /New Patient ** -->
	<bean id="phrOptionsForm" class="org.openmrs.web.controller.OptionsFormController">
		<property name="commandName"><value>opts</value></property>
		<property name="commandClass"><value>org.openmrs.web.OptionsForm</value></property>
		<property name="formView"><value>/module/personalhr/view/optionsForm</value></property>
		<property name="successView"><value>options.form</value></property>
	</bean>
	<!-- 
	<bean id="phrUserForm" class="org.openmrs.module.personalhr.web.controller.PhrUserFormController">
		<property name="sessionForm"><value>true</value></property>
		<property name="commandName"><value>user</value></property>
		<property name="formView"><value>/module/personalhr/view/userForm</value></property>
		<property name="successView"><value>user.form</value></property>
	</bean>
	-->
	<!-- ** User ** -->
	<bean id="phrUserList" class="org.openmrs.module.personalhr.web.controller.PhrUserListController">
		<property name="sessionForm"><value>true</value></property>
		<property name="commandName"><value>userList</value></property>
		<property name="formView"><value>/module/personalhr/view/userList</value></property>
		<property name="successView"><value>/phr/user.list</value></property>
	</bean>
	
    <!-- Portlet Controllers -->
	<bean id="phrPortletController" class="org.openmrs.module.personalhr.web.controller.PortletController" />
	<bean id="phrPersonRelationshipsPortletController" class="org.openmrs.module.personalhr.web.controller.PersonRelationshipsPortletController" />	    
	<bean id="phrNameLayoutPortletController" class="org.openmrs.module.personalhr.web.controller.PhrNameLayoutPortletController" />
</beans>
